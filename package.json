  "husky": {
    "hooks": {
      "pre-commit": "npm run build-iife && git add dist"
    }
  },
  "devDependencies": {
    "concurrently": "^6.1.0",
    "husky": "^4.2.5",
    "rollup": "^2.26.10",
    "serve": "^11.3.2"
  }
}
